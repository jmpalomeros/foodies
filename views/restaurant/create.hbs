<div>
  <nav class="navbar bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">
            <img src="/images/foodie-logo.png" alt="foodies" height="80">
          </a>
        </div>
      </nav>
<div id="create-rest">

  <h3>Add restaurant</h3>

  <form action="/restaurant/create" method="POST" enctype="multipart/form-data">

    <label for="name">Name</label>
    <input type="text" name="name" />
    <br />
    <label for="location">Location</label>
    <input type="text" name="location" />
    <br />
    <label for="style">Style</label>

    <select name="style">
      <option value="">Choose a style</option>
      {{#each styleList}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <label for="mainDish">Main dish</label>
    <input type="text" name="mainDish" />
    <br />
    <label for="image">Upload Image</label>
    <input type="file" name="image" />

    <p style="color: red ">{{errorMessage}}</p>

    <button class="btn btn-primary border border-2 border-white">Send</button>

  </form>

  <a href="/restaurant">
    <button class="btn btn-primary border border-2 border-white">Go home</button>
  </a>
</div>
</div>