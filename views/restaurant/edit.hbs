<div>
  <nav class="navbar bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">
            <img src="/images/foodie-logo.png" alt="foodies" height="80">
          </a>
        </div>
      </nav>

<div id="edit-rest">

  <h3>Edit restaurant</h3>

  <form
    action="/restaurant/{{editRestaurant._id}}/edit"
    method="POST"
    enctype="multipart/form-data"
  >

    <label for="name">Name</label>
    <input type="text" name="name" value="{{editRestaurant.name}}" />
    <br />
    <label for="location">Location</label>
    <input type="text" name="location" value="{{editRestaurant.location}}" />
    <br />
    <label for="style">Style</label>

    <select name="style">
      <option value="">Choose a style</option>
      {{#each styleList}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <label for="mainDish">Main dish</label>
    <input type="text" name="mainDish" value="{{editRestaurant.mainDish}}" />
    <br />
    <label for="image">Upload Image</label>
    <input type="file" name="image" />

    <p style="color: red ">{{errorMessage}}</p>

    <button class="btn btn-primary border border-2 border-white">Upload</button>

  </form>

  <a href="/restaurant">
    <button class="btn btn-primary border border-2 border-white">Go home</button>
  </a>
</div>
</div>